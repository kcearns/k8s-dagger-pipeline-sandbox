{
  "name": "dagger-pipeline",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "pipeline": "dagger run tsx src/index.ts",
    "pipeline:build": "dagger run tsx src/index.ts build",
    "pipeline:test": "dagger run tsx src/index.ts test",
    "pipeline:deploy": "dagger run tsx src/index.ts deploy",
    "pipeline:lint": "eslint 'src/**/*.ts'",
    "pipeline:chart-lint": "dagger run tsx src/index.ts chart-lint",
    "pipeline:helm-test": "dagger run tsx src/index.ts helm-test",
    "pipeline:deploy-all": "dagger run tsx src/index.ts deploy-all"
  },
  "dependencies": {
    "@dagger.io/dagger": "^0.19.2"
  },
  "devDependencies": {
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "@types/node": "^22.10.0",
    "eslint": "^9.16.0",
    "@eslint/js": "^9.16.0",
    "typescript-eslint": "^8.18.0"
  }
}
